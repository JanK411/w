grammar de.fhdw.jjtt.w.W with org.eclipse.xtext.common.Terminals

generate w "http://www.fhdw.de/jjtt/w/W"

Program:
	Assignment | Sequence | Loop;

Assignment:
	toBeAssigned=Variable '=' var=Variable op=Operator const=Constant;

Variable:
	name=ID;

Operator:
	PLUS | MINUS;

PLUS:
	'+';

MINUS:
	'-';

Constant:
	value=INT;

Loop:
	'while' var=Variable '!=' const=Constant 'do' prog=Program 'endwhile';

Sequence:
	p1=(Assignment | Loop) ';' p2=Program;